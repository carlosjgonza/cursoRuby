<%= simple_form_for(@pin, html:{class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error"%>
  <%= f.full_error :image_content_type, class: "alert alert-error"%>

  	<%= f.input :image, :label => "Carga de Imágenes"%>

  	<%= f.input :image_remote_url, :label => "Imágen Cargada vía URL"%>

    <%= f.input :description, :label =>"Descripción", as: :text, input_html: {rows: "3"}%>

  <div class="actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
